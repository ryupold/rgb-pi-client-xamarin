<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rgbpi="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    style="@style/RGBPiActionBar">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/tb_left"
        android:layout_weight="1">
        <ImageView
            android:src="@drawable/Icon"
            style="@style/TabbarIcon_left"
            android:id="@+id/tb_logo" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tb_right">
        <ImageView
            android:src="@drawable/ic_brightness_1_black_36dp"
            style="@style/TabbarIcon_small_right"
            android:id="@+id/tb_off"
            rgbpi:MvxBind="Click ToolbarOffCommand"
            android:layout_marginRight="10dp" />
        <ImageView
            android:src="@drawable/ic_settings_applications_white_36dp"
            style="@style/TabbarIcon_right"
            android:id="@+id/tb_settings"
            rgbpi:MvxBind="Click ToolbarShowSettingsCommand" />
    </LinearLayout>
</LinearLayout>