<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:rgbpi="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:minWidth="25px"
    android:minHeight="25px"
    style="@style/RGBPiActionBar">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:id="@+id/tb_left"
        android:layout_weight="1">
        <Button
            android:background="@drawable/ic_chevron_left_white_36dp"
            android:id="@+id/tb_back"
            style="@style/TabbarIcon_small_left"
            rgbpi:MvxBind="Click ToolbarGoBackCommand" />
        <Button
            android:background="@drawable/Icon"
            android:id="@+id/tb_logo"
            style="@style/TabbarIcon_left"
            android:layout_marginLeft="-10dp"
            rgbpi:MvxBind="Click ToolbarGoBackCommand" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/tb_right"
        android:minWidth="25px"
        android:minHeight="25px">
        <Button
            android:background="@drawable/ic_add_circle_outline_white_36dp"
            android:id="@+id/tb_add"
            style="@style/TabbarIcon_right"
            rgbpi:MvxBind="Click ToolbarAddHostCommand; Visible AddButtonVisible" />
    </LinearLayout>
</LinearLayout>